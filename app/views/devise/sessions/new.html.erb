<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <%= image_tag 'logo.svg', class:"mx-auto h-20 w-auto" %>
    <h2 class="text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Sign in to your account</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :email, "Email address", class: "devise-form-label" %>
        <div class="mt-2">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "devise-form-input" %>
        </div>
      </div>

      <div>
        <div class="flex items-center justify-between">
          <%= f.label :password, "Password", class: "devise-form-label"%>
          <div class="text-sm">
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "devise-blue-text" %>
          </div>
        </div>
        <div class="mt-2">
          <%= f.password_field :password, autocomplete: "current-password", class: "devise-form-input" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mt-2 px-1 flex items-center">
          <%= f.check_box :remember_me, style: "margin-top: 0.2em;", class: "mr-2 align-middle" %>
          <%= f.label :remember_me, class: "devise-form-label" %>
        </div>
      <% end %>

      <div class="mt-2">
        <%= f.submit "Log in", class: "devise-submit-button" %>
      </div>
    <% end %>

    <p class="mt-10 text-center text-sm text-gray-500">
      Not a member?
      <%= link_to "Sign up", new_registration_path(resource_name), class: "devise-blue-text" %>
    </p>
  </div>
</div>
