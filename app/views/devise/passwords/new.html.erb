<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <%= image_tag 'logo.svg', class:"mx-auto h-20 w-auto" %>
    <h2 class="devise-header">Forgot your password?</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :email, "Email address", class: "devise-form-label" %>
        <div class="mt-2">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "devise-form-input" %>
        </div>
      </div>

      <div class="mt-2">
        <%= f.submit "Send me reset password instructions", class: "devise-submit-button" %>
      </div>
    <% end %>

    <p class="mt-10 text-center devise-blue-text text-sm space-x-8">
      <%= link_to "Login", new_session_path(resource_name) %>
      <%= link_to "Sign up", new_registration_path(resource_name) %>
    </p>
  </div>
</div>

