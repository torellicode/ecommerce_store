<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <%= image_tag 'logo.svg', class:"mx-auto h-20 w-auto" %>
    <h2 class="text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Change your password</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
      <div class="field">
        <%= f.label :password, "Password", class: "devise-form-label"%>
        <div class="mt-2">
          <%= f.password_field :password, autocomplete: "new-password", class: "devise-form-input" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Password confirmation", class: "devise-form-label"%>
        <div class="mt-2">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "devise-form-input" %>
        </div>
      </div>

      <div class="mt-2">
        <%= f.submit "Change my password", class: "devise-submit-button" %>
      </div>
    <% end %>

    <p class="mt-10 text-center devise-blue-text text-sm space-x-8">
      <%= link_to "Login", new_session_path(resource_name) %>
      <%= link_to "Sign up", new_registration_path(resource_name) %>
    </p>
  </div>
</div>
